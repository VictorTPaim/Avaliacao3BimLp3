@model List<AvaliacaoLP3Bi3.ViewModels.LojaViewModel>

@{
    ViewData["Title"] = "Lista de Lojas/Quiosques";
}

<h1>Lojas/Quiosques</h1>

@if(Model.Count == 0)
{
    <p>Não há lojas/quiosques cadastrados.</p>
    <a href="/Loja/Cadastrar"><button>Cadastrar Comércio</button></a>
} 
else
{
    <p>Número de comércios cadastrados: @Model.Count</p>

    @foreach(var loja in Model)
    {
        <h2>@loja.Nome</h2>
        <p>@loja.Piso</p>
        <a href="/Loja/Show/@loja.Id">
            <button>Detalhes do comércio</button>
        </a>
        <br>
        <a href="/Loja/ExcluirLoja/@loja.Id">
            <button>Excluir comércio</button>
        </a>
        <hr>
    }
}