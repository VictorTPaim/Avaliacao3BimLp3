@model List<AvaliacaoLP3Bi3.ViewModels.LojaViewModel>

@{
    ViewData["Title"] = "Cadastrar novo comércio";
}

<h1>Cadastre um novo comércio</h1>

<form asp-action="CadastrarLoja" method="POST">

    <select name="piso" id="piso">
        <option value="Piso 1">Piso 1</option>
        <option value="Piso 2">Piso 2</option>
        <option value="Piso 3">Piso 3</option>
    </select>

    <label for="n1">Nome</label>
    <input type="text" id="nome" name="nome">

    <label for="n2">Descrição do comércio:</label>
    <input type="text" id="descricao" name="descricao">

    <select name="tipo" id="tipo">
        <option value="Quiosque">Quiosque</option>
        <option value="Loja">Loja</option>
    </select>

    <label for="n2">Digite o email do comércio:</label>
    <input type="text" id="email" name="email">

    <input type="submit" value="Cadastrar Loja">

</form>
